        android:paddingBottom="5.0dip"
        android:layout_width="200.0dip"
        android:layout_height="40.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="10.0dip"
        android:text="Add New Profile" />
</LinearLayout>