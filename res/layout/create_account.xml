<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/login_background"
    android:paddingTop="120.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="20.0sp"
        android:textColor="#ff0000ff"
        android:gravity="center"
        android:paddingBottom="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="25.0dip"
        android:text="Please Create Your Account" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="15.0dip">
            <TextView
                android:textColor="#ff008a43"
                android:gravity="left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="25.0dip"
                android:text="Your Name" />
            <EditText
                android:id="@+id/etYourNameCreate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"
                android:maxLines="1"
                android:ems="12"
                android:inputType="text" />
            <requestFocus />
            <TextView
                android:textColor="#ff008a43"
                android:gravity="left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="25.0dip"
                android:text="Password" />
            <EditText
                android:id="@+id/etPasswordCreate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"
                android:maxLines="1"
                android:ems="12"
                android:inputType="textWebPassword" />
            <TextView
                android:textColor="#ff008a43"
                android:gravity="left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="25.0dip"
                android:text="Re-enter Password" />
            <EditText
                android:id="@+id/etRePasswordCreate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"
                android:maxLines="1"
                android:ems="12"
                android:inputType="textWebPassword" />
            <TextView
                android:textColor="#ff008a43"
                android:gravity="left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="25.0dip"
                android:text="Password Hint" />
            <EditText
                android:id="@+id/etPasswordHintCreate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"
                android:maxLines="1"
                android:ems="12"
                android:inputType="text" />
            <Button
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="#ff0000ff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/bSaveCreateAccount"
                android:background="@drawable/button_mahedi"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="220.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="Create Account" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>