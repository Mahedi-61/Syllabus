<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" 
    android:background="@drawable/bg_img_holder_1" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:orientation="vertical"
        android:background="#ffdcdcdc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="3.0dip">
        <bd.org.shibir.model.TextViewWithBanglaFont
            android:textSize="20.0sp"
            android:textColor="#ff008000"
            android:gravity="center" 
            android:layout_gravity="center" 
            android:id="@+id/tvSyllabusOverview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip" 
            android:layout_marginRight="5.0dip" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip">
            <bd.org.shibir.model.TextViewWithBanglaFont
                android:textSize="14.0sp"
                android:textColor="#ff008000" 
                android:gravity="right"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:text="মোট সিলেবাসঃ  "
                android:layout_weight="0.4" />
            <TextView android:textSize="13.0sp"
                android:textColor="#ff008000"
                android:gravity="left" 
                android:id="@+id/tvTotalNoSO" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:layout_marginRight="5.0dip" 
                android:text="110" 
                android:layout_weight="0.1" />
            <bd.org.shibir.model.TextViewWithBanglaFont
                android:textSize="14.0sp"
                android:textColor="#ff008000" 
                android:gravity="right"
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip" 
                android:text="সম্পন্ন হয়েছেঃ " 
                android:layout_weight="0.3" />
            <TextView android:textSize="13.0sp" 
                android:textColor="#ff008000"
                android:gravity="left" 
                android:id="@+id/tvTotalCompletedSO" 
                android:layout_width="0.0dip"
                android:layout_height="wrap_content" 
                android:text="121"
                android:layout_weight="0.2" />
        </LinearLayout>
    </LinearLayout>
    <ListView android:id="@+id/lvSyllabusOverview" 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dip"
        android:listSelector="#00000000" 
        android:divider="#ff555555"
        android:dividerHeight="0.0px" 
        android:layout_weight="1.0" />
</LinearLayout>